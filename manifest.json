{
  "manifest_version": 3,
  "name": "Console Nano: AWS Co-pilot",
  "version": "1.0.0",
  "description": "Privacy-first, on-device AI assistant for AWS Console with intelligent guidance and error detection",
  "permissions": [
    "sidePanel",
    "storage",
    "scripting",
    "tabs",
    "activeTab"
  ],

  "host_permissions": [
    "*://*.console.aws.amazon.com/*",
    "*://*.aws.amazon.com/*"
  ],
  "background": {
    "service_worker": "service-worker/service-worker.js"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.console.aws.amazon.com/*",
        "*://*.aws.amazon.com/*"
      ],
      "js": ["content-scripts/content-script.js"],
      "css": ["content-scripts/content-script.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Open Console Nano"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}